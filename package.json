{
  "name": "awesome-mac-apps",
  "version": "1.0.0",
  "description": "Searchable, filterable Mac apps directory",
  "type": "module",
  "scripts": {
    "fetch-data": "bun scripts/parse-readme.js",
    "typecheck": "bun x tsc --noEmit",
    "bundle": "bun build src/app.ts --outdir=dist --minify",
    "build": "bun run fetch-data && bun run typecheck && bun run bundle",
    "dev": "bun run bundle && bun x serve ."
  },
  "keywords": ["mac", "apps", "awesome-list", "search"],
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {
    "fuse.js": "^7.0.0"
  }
}
